    "installer": {
        "script": [
            "Start-Process msiexec -ArgumentList @('/i', \"$dir\\$fname\", '/quiet', 'INSTALLDIR=\"C:\\Program Files\\GlazeWM\"') -Wait -Verb RunAs",
            "if (Test-Path \"C:\\Program Files\\GlazeWM\\GlazeWM.exe\") { Write-Host 'GlazeWM installed successfully to C:\\Program Files\\GlazeWM' }"
        ]
    },
    "uninstaller": {
        "script": [
            "Start-Process msiexec -ArgumentList @('/x', \"$dir\\$fname\", '/quiet') -Wait -Verb RunAs",
            "if (-Not (Test-Path \"C:\\Program Files\\GlazeWM\")) { Write-Host 'GlazeWM uninstalled successfully' }"
        ]
    },
    "shortcuts": [
        [
            "GlazeWM.exe",
            "GlazeWM"
